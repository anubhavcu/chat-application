<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" id="card-hover">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <%- include ./partials/messages %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block" id="hover">Login
          </button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register" id="hover">Register</a>
        </p>
      </div>
    </div>
  </div>

  <style>
      #hover:hover{
        color: #000;
        transform: scale(1.03);
        transition : all 0.2s ease-out;
      }
      #card-hover:hover{
      transform: scale(1.04);
      transition: all 0.2s ease-out;
    }
    </style>