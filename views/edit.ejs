<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body" id="card-hover">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-edit"></i> Edit your profile
        </h1>
        <div class="alert alert-danger" role="alert">
          This page is not funtional yet. You may check this after some time. If you want your account to be deleted or for any suggestions about this project feel free to write at - anubhav342y@gmail.com
        </div>
        <%- include ./partials/messages %>
        <form action="/users/edit" method="">
          <div class="form-group">
            <label for="name">New Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Leave the field empty if you don't want to change"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <!-- <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div> -->
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create New Password(leave empty if you want unchanged)"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm New Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <!-- <button type="hidden" name="_method" value="PUT" class="btn btn-primary btn-block" id="hover">
            Save
          </button> -->
          <br>
          <a href="/users/delete" class="btn btn-primary btn-block" id="hover">Save
          </a>
        <a href="/users/delete" class="btn btn-danger btn-block" id="hover">Delete Account
        </a>
        </form>
        
      </div>
    </div>
  </div>

  <style>
    #hover:hover{
      color: #000;
      transform: scale(1.03);
      transition : all 0.2s ease-out;
    }
    #card-hover:hover{
      transform: scale(1.04);
      transition: all 0.2s ease-out;
    }
  </style>
